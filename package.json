{
  "name": "react-assessment",
  "description": "The react web application.",
  "version": "1.0.0",
  "keywords": [
    "react",
    "jest",
    "create-react-app"
  ],
  "author": "Santosh Shinde",
  "license": "ISC",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build-css": "node-sass-chokidar --include-path src src/styles/global/index.scss public/global/assessment/css/index.css --output-style compressed",
    "build": "npm run build-css && react-scripts build",
    "clean": "rimraf {bin,build}",
    "clean-cdn": "rimraf build/global",
    "test": "react-scripts test --env=jsdom --verbose --coverage",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,scss}\"",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^7.1.0",
    "react-scripts": "^3.0.1",
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "jest-localstorage-mock": "^2.1.0",
    "node-sass-chokidar": "^1.3.5",
    "prettier": "^1.9.2",
    "react-test-renderer": "^16.2.0",
    "regenerator-runtime": "^0.13.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.{js,jsx,ts,tsx}"
    ],
    "watchPathIgnorePatterns": [
      "src/index.js",
      "src/registerServiceWorker.js",
      "src/testPolyfills.js",
      "src/setupTests.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "coverageReporters": [
      "text"
    ],
    "snapshotSerializers": []
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
